@model ShopTimeMVC.Models.Order
@{
    ViewBag.Title = "Complete";
}

<div class="col-md-12">
    <div class="thank-you">
        <div class="category">
            <h2>Thank you for your order</h2>
        </div>
        <div class="results shopping-cart">
            <div class="row invoice-info">
                <div class="col-xs-6">
                    <div class="tag-box">
                        <h4>Biiling and Delivery Information:</h4>
                        <ul class="list-unstyled">
                            <li id="name"><strong>Name:</strong>@Model.FirstName @Model.LastName </li>
                            <li id="email"><strong>Email:</strong>@Model.Email</li>
                            <li id="phone"><strong>Phone:</strong>@Model.Phone</li>
                            <li id="address"><strong>Address:</strong>@Model.Address</li>
                            <li id="del-date"><strong>Expected Delivery Date:</strong>@Model.ExpectedDeliveryDate</li>
                            <li id="city"><strong>City:</strong>@Model.City</li>
                            <li id="province"><strong>Province:</strong>@Model.Province</li>
                            <li id="postal-code"><strong>Postal Code:</strong>@Model.PostalCode</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Invoice Details</h3>
                </div>
                <table class="table table-striped invoice-table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody id="price-table">
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="sub-total">
                <div class="row">
                    <div class="col-sm-3 col-sm-offset-9">
                        <ul class="list-inline total-result">
                            <li>
                                <h4>Subtotal:</h4>
                                <div class="total-result-in">
                                    <span id="sub-total" class="text-right">@Model.SubTotal</span>
                                </div>
                            </li>
                            <li>
                                <h4>Taxes:</h4>
                                <div class="total-result-in">
                                    <span id="tax" class="text-right">@Model.Tax</span>
                                </div>
                            </li>
                            <li>
                                <h4>Shipping:</h4>
                                <div class="total-result-in">
                                    <span id="shipping" class="text-right">@Model.Shipping</span>
                                </div>
                            </li>
                            <li class="divider"></li>
                            <li class="total-price">
                                <h4>Total:</h4>
                                <div class="total-result-in">
                                    <span id="total" class="text-right">@Model.Total</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>